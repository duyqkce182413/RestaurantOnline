<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>Controllers.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddressController</servlet-name>
        <servlet-class>Controllers.AddressController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>Controllers.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>Controllers.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackController</servlet-name>
        <servlet-class>Controllers.FeedbackController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodController</servlet-name>
        <servlet-class>Controllers.FoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngredientController</servlet-name>
        <servlet-class>Controllers.IngredientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderApprovalController</servlet-name>
        <servlet-class>Controllers.OrderApprovalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>Controllers.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffOrderController</servlet-name>
        <servlet-class>Controllers.StaffOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecipeController</servlet-name>
        <servlet-class>Controllers.RecipeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticsController</servlet-name>
        <servlet-class>Controllers.StatisticsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/usercontroller</url-pattern>
        <url-pattern>/login-with-username</url-pattern>
        <url-pattern>/view-users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddressController</servlet-name>
        <url-pattern>/addresscontroller</url-pattern>
        <url-pattern>/listAddress</url-pattern>
        <url-pattern>/setDefaultAddress</url-pattern>
        <url-pattern>/insertAddress</url-pattern>
        <url-pattern>/updateAddress</url-pattern>
        <url-pattern>/deleteAddress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cartcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/categorycontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackController</servlet-name>
        <url-pattern>/feedbackcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodController</servlet-name>
        <url-pattern>/foodcontroller</url-pattern>
        <url-pattern>/list-of-foods-for-guest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngredientController</servlet-name>
        <url-pattern>/ingredientcontrolller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderApprovalController</servlet-name>
        <url-pattern>/orderapprovalcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/ordercontroller</url-pattern>
        <url-pattern>/listOrders</url-pattern>
        <url-pattern>/cancelOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffOrderController</servlet-name>
        <url-pattern>/listAdminOrders</url-pattern>
        <url-pattern>/viewOrderDetails</url-pattern>
        <url-pattern>/updateOrderStatus</url-pattern>
        <url-pattern>/searchByPhone</url-pattern>
        <url-pattern>/deleteOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecipeController</servlet-name>
        <url-pattern>/recipecontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsController</servlet-name>
        <url-pattern>/statisticscontroller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
